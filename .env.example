# Environment Configuration
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=production

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=touch_crm
DB_USER=postgres
DB_PASSWORD=your-secure-postgres-password-here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-at-least-32-characters
JWT_EXPIRES_IN=7d

# CORS Configuration
# Use * for all origins or specify your frontend domain
CORS_ORIGIN=*

# SMS Provider Configuration
# Options: mock, kavenegar, twilio, etc.
SMS_PROVIDER=mock
SMS_API_KEY=
SMS_API_SECRET=

# Backend Port (internal)
PORT=3000

# Optional: User/Group IDs for Docker
USER_ID=1000
GROUP_ID=1000
